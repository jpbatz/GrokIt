//- terms/main.jade
extends ../layout.jade

block content
  .row
    .small-12.medium-12.large-12.columns
      p Grok Count: #{count} Terms
      a(href="http://localhost:8080/add_term")
        button(type="button", class="add-button") +
  .row
    .small-12.medium-12.large-12.columns
      each record in stuff
        .row
          .small-12.medium-12.large-2.columns
            h3.terminology 
              a(href="/view_term/#{record._id}") #{record.term}
          .small-12.medium-12.large-10.columns
            p.definition Definition: #{record.definition} 
          //- p Notes: #{record.notes} 
          //- p Sites: #{record.sites}
